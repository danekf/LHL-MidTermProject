<!DOCTYPE html>
<html lang="en">
  <meta charset="utf-8" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1, shrink-to-fit=no"
  />

<!-- App CSS -->
<link rel="stylesheet" href="/styles/addNew.css" type="text/css" />

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Login</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/login.css" type="text/css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/themes/base/jquery-ui.min.css"
  type="text/css" />
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

  <!-- Load user scripts -->
  <script type="text/javascript" src="/scripts/addNewLogin.js"></script>
  <script type="text/javascript" src="/scripts/generatePassword.js"></script>
  <script type="text/javascript" src="/scripts/copyToClipboard.js"></script>

  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body class="favourited-logins">
  <%- include('partials/_header.ejs') %>
  <div class="add-new-login-page flex">
      <h1>Add new Saved Login</h1>
      <form id = "saveLogin" action = "/addNewLogin" method = "POST">

                <input
                type="text"
                placeholder="username/email"
                id = "login"
                name = "login"></input>


                <input
                type="text"
                placeholder="Log in URL (optional)"
                id = "URL"
                name = "URL"></input>
              <div class="password-input">

                <input
                  type="text"
                  placeholder="password"
                  id="password-field"
                  name = "password"></input>

                  <i id = "copyPasswordToClipboard" class="fa-solid fa-copy"></i>
              </div>

              <input type="text"
              placeholder="Name this login"
              id = "loginName"
              name = "loginName"></input>

              <button class="submit btn btn-primary" type = "submit" > Save Login Info </button>
              <div id = "alert"></div>

            </form>
            <button class="submit btn btn-secondary" data-bs-toggle="modal" data-bs-target="#passwordModal">Use our SECURE PASSWORD Generator!</button>

            </div>



  <!-- Modal -->
  <div class="modal fade" id="passwordModal" tabindex="-1" aria-labelledby="passwordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title" id="passwordModalLabel">Create Secure Password</h3>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          <div>
            <p class="error" id="error-1"><i class="fa-solid fa-triangle-exclamation"></i> No characters selected! Select character types.</p>
          </div>
        </div>
        <div class="modal-body">
          <form>

            <div class="options">
              <div class="sections">
                <h4>Password Length</h4>
                <form>
                  <div id="slideContainer">
                    <input type="text" class="sliderValue" data-index="0" value="10">
                  </div>
                  <div id="slider"></div>
                </form>
              </div>



              <div class="sections">
                <h4>Contains</h4>

                <div class="container check-container">
                  <input type="checkbox" id="uppercaseCheck" checked>
                  <span class="checkmark"></span>
                  <label>Uppercase</label>
                </div>


                <div class="container check-container">
                  <input type="checkbox" id="lowercaseCheck" checked>
                  <span class="checkmark"></span>
                  <label>Lowercase</label>
                </div>


                <div class="container check-container">
                  <input type="checkbox" id="numCheck" checked>
                  <span class="checkmark"></span>
                  <label>Numbers</label>
                </div>

                <div class="container check-container">
                  <input type="checkbox" id="symCheck" checked>
                  <span class="checkmark"></span>
                  <label>Symbols</label>
                </div>
              </div>
            </div>

            <button data-bs-dismiss="modal" class="submit btn btn-primary" id="passwordBtn" type="submit">Generate
              Password</button>
        </div>
        </form>
      </div>
    </div>
  </div>
  </div>
  </div>

  <%- include('partials/_footer.ejs') %>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"
      integrity="sha256-lSjKY0/srUM9BE3dPm+c4fBo1dky2v27Gdjm2uoZaL0=" crossorigin="anonymous"></script>

</body>

</html>
