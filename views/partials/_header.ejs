<!-- Partial header for header -->
<header>

  <span>
    <div class="top-bar">
      <!-- Favourites Icon-->
      <a href = "/" >
        <i class="fa-solid fa-star"></i>
      </a>

      <!-- App CSS -->
      <link rel="stylesheet" href="/styles/header.css" type="text/css" />

      <h1 class="title">SIGNUM</h1>
    </div>

    <!--Show login/username depending on if user is logged  or not-->
    <% if(user){ %>
      <form action="/logout" method="POST">
        <p class="logged-in-as">Logged in as <%= user.username %></p>
        <button class="submit btn btn-primary">Logout</button>
      </form>

    <% } else { %>
      <form action="/login" method="GET">
        <button class="submit btn btn-primary">Login</button>
      </form>
   <% } %>
  </span>
  <nav class="menu">
      <i id = "openMenu" class="fa-solid fa-angles-down"></i>
      <ul class="menu-bar">
        <% if(user) { %>

        <li><a href="/home">My Favourites</a></li>
        <li><a href="/home/all">All Logins</a></li>
        <li><a href="/addNewLogin">Add a New Account</a></li>
        <li><form action = "/home/search" method = "POST"><input name = "search"  placeholder="Search Logins" class="search-login"><button></button></form></li>
        <% } else { %>
        <li><a href="/home">Home</a></li>
        <li><a href="/register">Register</a></li>

        <% } %>
      </ul>
    </nav>
</header>


