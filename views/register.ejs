    <form action="/register" method="POST" class="registration-form">
      <span></span>

      <form>
        <input type = "email" name="email" placeholder="Email" class="email"></input>
      </form>

      <form>
        <input type = "username" name="username" placeholder="Username" class="username"></input>
      </form>

      <div class="password-input">
        <form>
          <input type="text" name="password" class="email" placeholder="password" id="password-field"></input>
        </form>
        <i id = "copyPasswordTo" class="fa-solid fa-copy"></i>
      </div>

      <button class="submit btn btn-secondary" data-bs-toggle="modal" data-bs-target="#passwordModal">Or user our SECURE PASSWORD CREATOR</button>
      <!-- AJAX POPUP OF _generatePassword Partial-->

      <form>
        <input type = "text" name="firstName" placeholder="First Name" class="firstName"></input>
      </form>

      <form>
        <input type = "text" name="lastName" placeholder="Last Name" class="lastName"></input>
      </form>

      <button type="submit" class="submit btn btn-primary"> Sign Up </button>

      <!-- <input type = "email" name="email" placeholder="Email" class="email"></input>
