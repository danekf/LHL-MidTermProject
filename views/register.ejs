      <input type = "text" name="lastName" placeholder="Last Name" class="lastName"></input>
      <button type="submit" class="signup"> Sign up</button> -->
    </form>

    <!-- Modal -->
  <div class="modal fade" id="passwordModal" tabindex="-1" aria-labelledby="passwordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title" id="passwordModalLabel">Create Secure Password</h3>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          <div>
            <p class="error" id="error-1"><i class="fa-solid fa-triangle-exclamation"></i> No characters selected! Select character types.</p>
          </div>
        </div>
        <div class="modal-body">
          <form>

            <div class="options">
              <div class="sections">
                <h4>Password Length</h4>
                <form>
                  <div id="slideContainer">
                    <input type="text" class="sliderValue" data-index="0" value="10">
                  </div>
                  <div id="slider"></div>
                </form>
              </div>



              <div class="sections">
                <h4>Contains</h4>

                <div class="container check-container">
                  <input type="checkbox" id="uppercaseCheck" checked>
                  <span class="checkmark"></span>
                  <label>Uppercase</label>
                </div>


                <div class="container check-container">
                  <input type="checkbox" id="lowercaseCheck" checked>
                  <span class="checkmark"></span>
                  <label>Lowercase</label>
                </div>


                <div class="container check-container">
                  <input type="checkbox" id="numCheck" checked>
                  <span class="checkmark"></span>
                  <label>Numbers</label>
                </div>

                <div class="container check-container">
                  <input type="checkbox" id="symCheck" checked>
                  <span class="checkmark"></span>
                  <label>Symbols</label>
                </div>
              </div>
            </div>

            <button data-bs-dismiss="modal" class="submit btn btn-primary" id="passwordBtn" type="submit">Generate
              Password</button>
        </div>
        </form>
      </div>
    </div>
  </div>


